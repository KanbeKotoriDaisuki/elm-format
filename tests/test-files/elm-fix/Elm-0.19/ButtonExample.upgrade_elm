module Main exposing (upgrade_Button_buttonDeprecated)

import ElmFix
import Nri.Ui.Button.V9 as Button


upgrade_Nri_DEPRECATED_Button_buttonDeprecated ({ label, style } as config) =
    Button.button label
        [ case config.size of
            Nri.DEPRECATED.Button.Large ->
                Button.large
        , case config.width of
            Just w ->
                Button.exactWidth w

            Nothing ->
                ElmFix.remove
        , Button.onClick config.onClick
        , case style of
            Nri.DEPRECATED.Button.Premium ->
                Button.premium

            Nri.DEPRECATED.Button.Normal ->
                ElmFix.remove
        , case config.icon of
            Nothing ->
                ElmFix.remove

            Just i ->
                Button.icon i
        , if config.disabled then
            Button.disabled

          else
            ElmFix.remove
        ]
